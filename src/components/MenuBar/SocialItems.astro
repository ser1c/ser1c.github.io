---
// Define your social links
interface SocialLink {
  platform: string;
  url: string;
  ariaLabel: string;
}

const socialLinks: SocialLink[] = [
  {
    platform: 'twitter',
    url: 'https://x.com/realsabinsubedi',
    ariaLabel: "Sabin Subedi's Twitter/X Account"
  },
  {
    platform: 'github',
    url: 'https://github.com/ser1c',
    ariaLabel: "Sabin Subedi's GitHub Account"
  },
  {
    platform: 'linkedin',
    url: 'https://www.linkedin.com/in/sabin-subedi-007575134/', 
    ariaLabel: "Sabin Subedi's LinkedIn Profile"
  },
  {
    platform: 'substack',
    url: 'https://substack.com/@sabinsubedi', // Replace with your actual Substack URL
    ariaLabel: "Sabin Subedi's Substack Newsletter"
  },
  {
    platform: 'email',
    url: 'mailto:sabinsubedi.subedi@gmail.com',
    ariaLabel: "Send an email to Sabin Subedi"
  }
];

// You can pass a class name as a prop
interface Props {
  className?: string;
  variant?: 'header' | 'profile';
}

const { 
  className = "flex space-x-4", 
  variant = 'header' 
} = Astro.props;

// Additional classes based on variant
const variantClasses = variant === 'profile' 
  ? "justify-center mt-4" 
  : "";
---


<div class={`${className} ${variantClasses}`}>
  {socialLinks.map(link => (
    <a 
      href={link.url} 
      aria-label={link.ariaLabel}
      class="transition-colors duration-200 hover:text-blue-800"
      target={link.platform !== 'email' ? '_blank' : undefined}
      rel={link.platform !== 'email' ? 'noopener noreferrer' : undefined}
    >
      {link.platform === 'twitter' && (
        <svg 
          class="h-5 w-5 text-zinc-500 hover:text-blue-500" 
          xmlns="http://www.w3.org/2000/svg" 
          viewBox="0 0 24 24" 
          fill="none" 
          stroke="currentColor" 
          stroke-width="2" 
          stroke-linecap="round" 
          stroke-linejoin="round"
        >
          <path d="M22 4s-.7 2.1-2 3.4c1.6 10-9.4 17.3-18 11.6 2.2.1 4.4-.6 6-2C3 15.5.5 9.6 3 5c2.2 2.6 5.6 4.1 9 4-.9-4.2 4-6.6 7-3.8 1.1 0 3-1.2 3-1.2z"></path>
        </svg>
      )}

      {link.platform === 'github' && (
        <svg 
          class="h-5 w-5 text-zinc-500 hover:text-purple-700" 
          xmlns="http://www.w3.org/2000/svg" 
          viewBox="0 0 24 24" 
          fill="none" 
          stroke="currentColor" 
          stroke-width="2" 
          stroke-linecap="round" 
          stroke-linejoin="round"
        >
          <path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"></path>
        </svg>
      )}

      {link.platform === 'linkedin' && (
        <svg 
          class="h-5 w-5 text-zinc-500 hover:text-blue-700" 
          xmlns="http://www.w3.org/2000/svg" 
          viewBox="0 0 24 24" 
          fill="none" 
          stroke="currentColor" 
          stroke-width="2" 
          stroke-linecap="round" 
          stroke-linejoin="round"
        >
          <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"></path>
          <rect x="2" y="9" width="4" height="12"></rect>
          <circle cx="4" cy="4" r="2"></circle>
        </svg>
      )}

{link.platform === 'substack' && (
  <svg 
    class="h-5 w-5 text-zinc-500 hover:text-orange-500" 
    viewBox="0 0 24 24" 
    fill="none"
    xmlns="http://www.w3.org/2000/svg"
    stroke="currentColor"
    stroke-width="2"
    stroke-linecap="round"
    stroke-linejoin="round"
  >
    <path d="M3 3h18M3 9h18"/>
    <path d="M3 15h18v6l-9-4-9 4v-6z"/>
  </svg>
)}
      {link.platform === 'email' && (
        <svg 
          class="h-5 w-5 text-zinc-500 hover:text-green-600" 
          xmlns="http://www.w3.org/2000/svg" 
          viewBox="0 0 24 24" 
          fill="none" 
          stroke="currentColor" 
          stroke-width="2" 
          stroke-linecap="round" 
          stroke-linejoin="round"
        >
          <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
          <polyline points="22,6 12,13 2,6"></polyline>
        </svg>
      )}
    </a>
  ))}
</div>